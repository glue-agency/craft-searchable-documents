{
    "name": "glue-agency/searchable-documents",
    "description": "Make documents searchable",
    "type": "craft-plugin",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Glue",
            "homepage": "https://www.glue.be"
        }
    ],
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.4.0",
        "rubiconinternational/pdfparser": "v2.1.1",
        "spatie/pdf-to-text": "^1.52",
        "phpoffice/phpword": "^1.1",
        "phpoffice/phpspreadsheet": "^1.1",
        "dompdf/dompdf": "^2.0",
        "mpdf/mpdf": "^8.1"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "glueagency\\searchabledocuments\\": "src/"
        }
    },
    "extra": {
        "handle": "_searchable-documents",
        "name": "Searchable Documents",
        "developer": "Glue Agency",
        "documentationUrl": "",
        "class": "glueagency\\searchabledocuments\\SearchableDocuments"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
